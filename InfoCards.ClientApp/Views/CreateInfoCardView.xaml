<Window x:Class="InfoCards.ClientApp.Views.CreateInfoCardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfoCards.ClientApp.Views"
        mc:Ignorable="d" Background="AliceBlue"
        Title="Создание информационной карточки" Height="200" Width="350">
    <StackPanel>
        <StackPanel Margin="30, 20" Orientation="Horizontal">
            <TextBlock Text="Название" Width="110"/>
            <TextBox Text="{Binding Name}" Width="140"/>
        </StackPanel>
        <StackPanel Margin="30, 0" Orientation="Horizontal">
            <TextBlock Text="Изображение" Width="110"/>
            <TextBlock Text="{Binding ImagePath}" Width="140"/>
        </StackPanel>
        <Button Margin="100, 10" Content="Select" Width="60" Command="{Binding SelectImageCommand}"/>
        <Button Margin="0, 20" Width="120" Content="Create" Command="{Binding CreateCommand}"/>
    </StackPanel>
</Window>
